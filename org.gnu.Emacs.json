{
    "app-id": "org.gnu.Emacs",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.24",
    "sdk": "org.gnome.Sdk",
    "command": "emacs",
    "finish-args": [
        "--socket=x11",
        "--share=network",
        "--filesystem=host"
    ],
    "modules": [
        {
            "name": "emacs",
            "sources": [
                {
                    "type": "archive",
                    "url": "http://www.nic.funet.fi/pub/gnu/ftp.gnu.org/pub/gnu/emacs/emacs-25.2.tar.xz",
                    "sha256": "59b55194c9979987c5e9f1a1a4ab5406714e80ffcfd415cc6b9222413bc073fa"
                }
            ]
        }
    ],
    "build-options": {
        "env": {
            "CANNOT_DUMP": "yes"
        }
    },
    "rename-icon": "emacs",
    "rename-desktop-file": "emacs.desktop"
}
